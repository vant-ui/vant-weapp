<checkbox-group class="van-checkbox" bindchange="handleCheckboxChange" disabled>
  <label
    class="van-checkbox__label"
    wx:key="{{ index }}-{{ item.name }}"
    wx:for="{{items}}"
  >
    <checkbox
      value="{{item.name}}"
      checked="{{item.checked}}"
      color="{{parse.getColor(activeColor)}}"
    />{{item.value}}
  </label>
</checkbox-group>

<wxs module="parse">
function getColor(color) {
  color = color || '#ff4444'
  return color;
}

module.exports = {
  getColor: getColor
};
</wxs>
