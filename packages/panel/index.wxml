<view class="van-panel van-hairline--top-bottom custom-class">
  <van-cell 
    wx:if="{{ title || desc || status }}"
    title="{{ title }}"
    label="{{ desc }}"
    value="{{ status }}"
    custom-class="header-class"
    value-class="{{statusType === 'success' ? 'van-panel__header-value-success' : (statusType === 'info' ? 'van-panel__header-value-info' : (statusType === 'warning' ? 'van-panel__header-value-warning' : 'van-panel__header-value-danger'))}}"
  />
  <slot wx:else name="header" />

  <view class="van-panel__content">
    <slot />
  </view>

  <view wx:if="{{ useFooterSlot }}" class="van-panel__footer van-hairline--top footer-class">
    <slot name="footer" />
  </view>
</view>
