@import "../common/_mixins";

.zan-panel {
  position: relative;
  overflow: hidden;

  &__title {
    font-size: 14px;
    line-height: 1;
    color: #999;
    padding: 20px 15px 10px 15px;
  }

  &__content {
    position: relative;
    background: #fff;
    overflow: hidden;

    &::after {
      @mixin hairline;
      border-top-width: 1px;
      border-bottom-width: 1px;
    }
  }

  &--without-border::after {
    border: 0 none;
  }
}
