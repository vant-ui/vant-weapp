.zan-form {
  background-color: #fff;
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
}

.zan-form__item {
  line-height: 26px;
}

.zan-form__title {
  float: left;
  width: 80px;
  font-size: 14px;
}

.zan-form__title--top {
  align-self: flex-start;
}

.zan-form__input, .zan-form__textarea {
  min-height: 26px;
}

.zan-form__input input {
  min-height: 26px;
}

.zan-form__textarea {
  display: -webkit-flex;
  display: flex;
  align-items: center;
}

.zan-form__textarea textarea {
  width: auto;
  flex: 1;
}


.zan-form__picker--bd {
  z-index: 200;
  background: #fff;
  position: fixed;
  bottom: 0px;
  width: 100%;
  height: 750rpx;
}

.zan-form__region--dialog-btn {
  position: absolute;
  top:0px;
  width: 100%;
  z-index: 4;
}

.zan-form__region--dialog-btn-cancel {
  float: left;
  margin: 20rpx;
  color: #818181;
}

.zan-form__region--dialog-btn-confirm {
  float: right;
  margin: 20rpx;
  color: #2FB42E
}
