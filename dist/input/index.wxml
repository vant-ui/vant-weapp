<template name="zan-input">
  <view class="zan-cell {{ error ? 'zan-input--error' : '' }}">
    <view class="zan-cell__hd zan-input__title">{{ title }}</view>
    <textarea
      wx:if="{{ type === 'textarea' }}"
      auto-height
      placeholder="{{ placeholder }}"
      class="zan-input__input zan-cell__bd {{ right ? 'zan-input__input--right' : '' }}"
      bindinput="_handleZanInputChange"
      data-component-id="{{ componentId }}"></textarea>
    <input
      wx:else
      type="{{ inputType || 'text' }}"
      placeholder="{{ placeholder }}"
      class="zan-input__input zan-cell__bd {{ right ? 'zan-input__input--right' : '' }}"
      bindinput="_handleZanInputChange"
      data-component-id="{{ componentId }}"/>
  </view>
</template>
